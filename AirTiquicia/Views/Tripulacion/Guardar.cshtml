@model TripulacionModel /*Utilizo la clase en este modelo*/

@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
  <div class="card-header">
    Crear Tripulante
  </div>
  <div class="card-body">
   
      <form asp-action= "Guardar" asp-controlller="Tripulacion" method = "post">

      <div class="mb-3">
        <label class="form-label">Nombre Tripulante</label>
        <input asp-for="NombreTripulante" type="text" class="form-control" />
        <span asp-validation-for="NombreTripulante" class="text-danger"> </span>
      </div>
      <div class="mb-3">
        <label class="form-label">CodTipoTripulante</label>
        <input asp-for="CodTipoTripulante" type="text" class="form-control">
        <span asp-validation-for="CodTipoTripulante" class="text-danger"> </span>
      </div>    

      <button type="submit" class="btn btn-success">Guardar</button>
      <a asp-action= "Listar" asp-controller="Tripulacion" class="btn btn-warning">Volver a la lista</a>
    </form>

  </div>
</div>

