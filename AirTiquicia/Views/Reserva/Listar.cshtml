@model List<ReservaModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
  <div class="card-header">
    Lista Vuelos
  </div>
  <div class="card-body">
     
     <hr/>
     <table class = "table table-bordered">
         <thead>
             <tr>
                 <th>Codigo Reserva</th>
                 <th>Codigo Vuelo</th>
                 <th>Nombre Vuelo</th>
                 <th>Fecha Vuelo</th>
                 <th>Duración Vuelo</th>
                 <th>Pais Origen</th>
                 <th>Aeropuerto Origen</th>
                 <th>Pais Destino</th>
                 <th>Aeropuerto Destino</th>
                 <th>Editar</th>
                 <th>Eliminar</th>
             </tr>
         </thead>
         <tbody>
             @foreach (var item in Model)
             {
                 <tr>
                     <td>@item.CodReserva</td>
                     <td>@item.CodVuelo</td>
                     <td>@item.NombreVuelo</td>
                     <td>@item.FechaVuelo</td>
                     <td>@item.PaisDestino</td>

                     <td>
                          <a asp-action= "Editar" asp-controller="Reserva" class="btn btn-primary" asp-route-CodReserva= "@item.CodReserva">Editar</a>
                     </td>
                     <td>
                          <a asp-action= "Eliminar" asp-controller="Reserva" class="btn btn-danger" asp-route-CodReserva= "@item.CodReserva">Eliminar</a>
                     </td>
                 </tr>
                 
             }
         </tbody>
     </table>

  </div>
</div>

